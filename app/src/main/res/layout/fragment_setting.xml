<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "20dp">

        <ImageView
            android:id="@+id/gambarUser"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/empty"
            android:contentDescription="Profil User" />

        <View
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="@color/purple_700"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/emailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/gantiGambar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Email user"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gantiGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganti Gambar"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/emailUser"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="OnClick" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple_700"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/ambilDataInet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambil data dari Internet"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="20sp"
        tools:ignore="OnClick" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple_700"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/aboutUsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="20sp"
        tools:ignore="OnClick" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple_700"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="20sp"
        tools:ignore="OnClick" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple_700"/>

</LinearLayout>